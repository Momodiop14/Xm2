{% extends '::base.html.twig' %}

{% block content %}
    <h1>User</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ entity.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ entity.telephone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.localite }}</td>
            </tr>
           
        </tbody>
    </table>

        <ul class="record_actions">
      {% if entity.isAuthor(app.user) %}
      <li>
        <a href="{{ path('utilisateur_edit', { 'username': entity.username }) }}">
            Edit
        </a>
     </li>
   
      {%endif %}
   
</ul>
{% endblock %}
