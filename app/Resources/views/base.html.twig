          <script type="text/javascript">
             $(document).ready(function(){

                 $('#ancretop').hide();
                 $("#ancretop").css('top',0);
                 $('#ancretop').css('position','relative') ;
                 

                 $('#ancretop').click(function(){
                  var the_id = $(this).attr("href");

                  $('html, body').animate({
                    scrollTop:0}, 'slow');
                  return false;
                });


                $(window).scroll(function () 
                {
               
                        if ($(this).scrollTop() > 640) 
                        {  
                            $("#ancretop").css('top',$(this).scrollTop()+200);
                            $("#ancretop").fadeIn(1500);
                        } else if ($(this).scrollTop() < 370) 
                          {
                            $("#ancretop").fadeOut(1500);
                             
                           }
                 });

                });

               function notify(message,type_message)
                 {

                   setTimeout(function() {
                                           $.bootstrapGrowl(message,
                                             {   
                                                 type: type_message ,
                                                 align: 'center',
                                                 width: 'auto',
                                                 allow_dismiss: true,
                                                 offset: {from: 'top', amount: 70}, // 'top', or 'bottom'


                                             });
                                         }, 2000);
                                                                      
                                                                    
                 }


          </script>


         {% endblock %}
        
